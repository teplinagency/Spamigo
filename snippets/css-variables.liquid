<style>
	{% comment %} Shopify fonts {% endcomment %}

	{% liquid
		if settings.font_heading == 'shopify'
			echo settings.font_heading_shopify | font_face

			for font in settings.font_heading_shopify.variants
				unless font == settings.font_heading_shopify
					echo font | font_face: font_display: 'swap'
				endunless
			endfor
		endif

		if settings.font_body == 'shopify'
			echo settings.font_body_shopify | font_face

			for font in settings.font_body_shopify.variants
				unless font == settings.font_body_shopify
					echo font | font_face: font_display: 'swap'
				endunless
			endfor
		endif
	 %}

	{% comment %} Custom fonts {% endcomment %}

    {% if settings.font_heading == 'example-font' or settings.font_body == 'example-font' %}
	    @font-face {
				font-family: 'Outfit';
				src: url({{ 'Outfit-Black.ttf' | asset_url }}) format('truetype');
				font-weight: 900;
				font-style: normal;
			}

		@font-face {
			font-family: 'Outfit';
			src: url({{ 'Outfit-ExtraBold.ttf'| asset_url }}) format('truetype');
			font-weight: 800;
			font-style: normal;
		}
		
		@font-face {
			font-family: 'Outfit';
			src: url({{ 'Outfit-Bold.ttf'| asset_url }}) format('truetype');
			font-weight: 700;
			font-style: normal;
		}

		@font-face {
			font-family: 'Outfit';
			src: url({{ 'Outfit-SemiBold.ttf'| asset_url }}) format('truetype');
			font-weight: 600;
			font-style: normal;
		}

		@font-face {
			font-family: 'Outfit';
			src: url({{ 'Outfit-Medium.ttf'| asset_url }}) format('truetype');
			font-weight: 500;
			font-style: normal;
		}
	
		@font-face {
			font-family: 'Outfit';
			src: url({{ 'Outfit-Regular.ttf'| asset_url }}) format('truetype');
			font-weight: 400;
			font-style: normal;
		}

		@font-face {
			font-family: 'Outfit';
			src: url({{ 'Outfit-Light.ttf'| asset_url }}) format('truetype');
			font-weight: 300;
			font-style: normal;
		}
		
		@font-face {
			font-family: 'Outfit';
			src: url({{ 'Outfit-ExtraLight.ttf'| asset_url }}) format('truetype');
			font-weight: 200;
			font-style: normal;
		}
		
		@font-face {
			font-family: 'Outfit';
			src: url({{ 'Outfit-Thin.ttf'| asset_url }}) format('truetype');
			font-weight: 100;
			font-style: normal;
		}
    {% endif %}

	{% comment %} CSS variables {% endcomment %}

    :root {
			
				--black: {{ settings.black }};
				--white: {{ settings.white }};

				--deep-blue: {{ settings.deep-blue }};
				--light-blue: {{ settings.light-blue }};

				--grey-1: {{ settings.grey-1 }};
				--grey-2: {{ settings.grey-2 }};
				--grey-3: {{ settings.grey-3 }};

				--background: {{ settings.background }};
				--bg-blue: {{ settings.bg-blue }};

		{% case settings.font_heading %}
			{% when 'shopify' %}
		        --font-heading: {{ settings.font_heading_shopify.family }}, {{ settings.font_heading.fallback_families }};
			{% when 'example-font' %}
		        --font-heading: 'Outfit', sans-serif;
		{% endcase %}

		{% case settings.font_body %}
			{% when 'shopify' %}
		        --font-body: {{ settings.font_body_shopify.family }}, {{ settings.font_body.fallback_families }};
			{% when 'example-font' %}
		        --font-body: 'Outfit', sans-serif;
		{% endcase %}
    }
</style>
