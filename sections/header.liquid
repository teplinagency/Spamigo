{{ "sections-header.css" | asset_url | stylesheet_tag }}

<s-header class="s-header container-l">
  <div class="s-header__wrapper">
    <div class="s-header__mobile-buttons">
      <button type="button" class="s-header__burger-button js-header__burger-button">
        {% render "icon-burger" %}
        {% render "icon-burger-close" %}
      </button>

      <button type="button" class="s-header__search-button js-header__search-button">
        {% render "icon-search" %}
      </button>
    </div>

    <a href="{{ routes.root_url }}" class="s-header__logo-container">
      {% case localization.country.iso_code %}
        {% when "US" %}
          <div class="s-header__country-logo">
            {% render 'icon-country-us' %}
          </div>
        {% when "CA" %}
          <div class="s-header__country-logo">
            {% render 'icon-country-ca' %}
          </div>
        {% else %}

      {% endcase %}
      {% if section.settings.logo != blank %}
        <div class="s-header__logo">
          {% render "image", image: section.settings.logo %}
        </div>
      {% endif %}
    </a>

    {% if section.settings.menu != blank %}
      <div class="s-header__linklist">
        {% for first_deep_link in section.settings.menu.links limit: 4 %}
          {% if first_deep_link.links.size > 0 %} 
            <div class="s-header__linklist-link s-header__linklist-link--hover">
              {{ first_deep_link.title }} 
              {% render "icon-chevron" %}
            </div>
            <div class="s-header__megamenu">
              <div class="s-header__megamenu-content">

              </div>

              <div class="s-header__megamenu-cards">
                {% for block in section.blocks %}
                  {% if block.settings.link != blank %}
                    <a class="s-header__megamenu-card" href="{{ block.settings.link }}">
                      {% if block.settings.image != blank %}
                        <div class="s-header__megamenu-card-img">
                          {% render 'image-lazy', image: block.settings.image %}
                        </div>
                      {% endif %}

                      {% if block.settings.title != blank %}
                        <h3 class="s-header__megamenu-card-title">
                          {{ block.settings.title }}
                        </h3>
                      {% endif %}

                      {% if block.settings.button_text != blank %}
                        <div class="s-header__megamenu-card-link">
                          {{ block.settings.button_text }}
                          {% render "icon-chevron" %}
                        </div>
                      {% endif %}
                    </a>
                  {% endif %}
                {% endfor %}
              </div>
            </div>
          {% else %}
            <a class="s-header__linklist-link" href="{{ first_deep_link.url }}">
              {{ first_deep_link.title }}
            </a>
          {% endif %}
        {% endfor %}
      </div>
    {% endif %}

    <div class="s-header__container">
      <div class="s-header__search-field">
        <input type="text" class="s-header__search-input js-header__search-input" placeholder="{{ "sections.header.search-placeholder" | t }}">
        <button type="button" class="s-header__search-field-button js-header__search-button">
          {% render "icon-search" %}
        </button>
      </div>

      <a class="s-header__account" href="{{ routes.account_url }}">
        {% render "icon-account" %}
      </a>

      <button type="button" class="s-header__cart-button">
        {% render "icon-cart" %}
        <span>
          {{ cart.item_count }}
        </span>
      </button>
    </div>
  </div>
  <div class="s-header__overlay"></div>
</s-header>

{% schema %}
  {
    "name": "Header",
    "tag": "header",
    "class": "section-header",
    "settings": [
      {
        "type": "header",
        "content": "Header Logo"
      },
      {
        "type": "image_picker",
        "id": "logo",
        "label": "Select Logo"
      },
      {
        "type": "header",
        "content": "Header Menu"
      },
      {
        "type": "link_list",
        "id": "menu",
        "label": "Select Header Menu"
      }
    ],
    "blocks": [
      {
        "type": "card",
        "name": "Megamenu Card",
        "limit": 6,
        "settings": [
          {
            "type": "header",
            "content": "Megamenu Card Settings"
          },
          {
            "type": "url",
            "id": "link",
            "label": "Card Link"
          },
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "text",
            "id": "title",
            "label": "Block Title"
          },
          {
            "type": "text",
            "id": "button_text",
            "label": "Button Text",
            "default": "Explore"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Header"
      }
    ]
  }
{% endschema %}