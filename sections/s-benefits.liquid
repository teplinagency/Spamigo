{{ "section-benefits.css" | asset_url | stylesheet_tag }}
<script src="{{ "section-benefits.js" | asset_url }}" defer></script>

{% render "section-padding" %}

{% style %}
  #shopify-section-{{ section.id }} .s-benefits__title {
    color: {{ section.settings.title_color }};
  }

  #shopify-section-{{ section.id }} .s-benefits__title b,
  #shopify-section-{{ section.id }} .s-benefits__title strong{
    color: {{ section.settings.accent_title_color }};
  }

  #shopify-section-{{ section.id }} .s-benefits__sliders {
    background: {{ section.settings.slider_bg }};
  }

  #shopify-section-{{ section.id }} .s-benefits__thumbnail-slide.swiper-slide-thumb-active {
    background: {{ section.settings.tab_bg }};
  }

  #shopify-section-{{ section.id }} .s-benefits__thumbnail-title {
    color: {{ section.settings.tab_color }}
  }

  #shopify-section-{{ section.id }} .s-benefits__link {
    background: {{ section.settings.link_bg }};
    color: {{ section.settings.link_color }};
  }

  #shopify-section-{{ section.id }} .s-benefits__link svg path {
    fill: {{ section.settings.link_color }};
  }

  #shopify-section-{{ section.id }} .s-benefits__link:hover {
    background: {{ section.settings.link_color }};
    color: {{ section.settings.link_bg }};
  }

  #shopify-section-{{ section.id }} .s-benefits__link:hover svg path {
    fill: {{ section.settings.link_bg }};
  }
{% endstyle %}

{% liquid
  assign benefits = section.blocks | where: "type", "benefit"
  assign slides = section.blocks | where: "type", "slide"
%}

<s-benefits class="s-benefits container-l">
  <div class="s-benefits__wrapper">
    {% if section.settings.title != blank %}
      <h2 class="s-benefits__title">
        {{ section.settings.title }}
      </h2>
    {% endif %}

    {% if benefits.size > 0 %}
      <ul class="s-benefits__list">
        {% for block in benefits %}
          {% style %}
            #shopify-section-{{ section.id }} .s-benefits__item-{{- block.id }} .s-benefits__item-icon {
              background: {{ block.settings.icon_bg }};
            }

            #shopify-section-{{ section.id }} .s-benefits__item-{{- block.id }} .s-benefits__item-icon svg path {
              fill: {{ block.settings.icon_color }};
            }

            #shopify-section-{{ section.id }} .s-benefits__item-{{- block.id }} .s-benefits__item-title {
              color: {{ block.settings.title_color }};
            }

            #shopify-section-{{ section.id }} .s-benefits__item-{{- block.id }} .s-benefits__item-description {
              color: {{ block.settings.description_color }};
            }
          {% endstyle %}
          <li class="s-benefits__item s-benefits__item-{{- block.id }}" {{ block.shopify_attributes }}>
            <div class="s-benefits__item-icon">
              {% render "icons", icon: block.settings.icon %}
            </div>

            {% if block.settings.title != blank %}
              <h3 class="s-benefits__item-title">
                {{ block.settings.title }}
              </h3>
            {% endif %}

            {% if block.settings.description != blank %}
              <div class="s-benefits__item-description">
                {{ block.settings.description }}
              </div>
            {% endif %}
          </li>
        {% endfor %}
      </ul>
    {% endif %}
  </div>

  <div class="s-benefits__sliders">
    <div class="s-benefits__thumbnail swiper js-benefits__thumbnail">
      <div class="swiper-wrapper">
        {% for block in slides %}
          {% liquid 
            assign image = block.settings.preview_image | default: block.settings.image
          %}

          {% if image != blank %}
            <div class="s-benefits__thumbnail-slide swiper-slide">
              {% render "image-lazy", image: image, class: "s-benefits__thumbnail-image" %}

              {% if block.settings.title != blank %}
                <h3 class="s-benefits__thumbnail-title">
                  {{ block.settings.title }}
                </h3>
              {% endif %}
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>

    <div class="s-benefits__main-slider swiper js-benefits__main-slider">
      <div class="swiper-wrapper">
        {% for block in slides %}
          {% liquid 
            assign image = block.settings.image | default: block.settings.preview_image
          %}

          {% if image != blank %}
            <div class="s-benefits__main-slide swiper-slide">
              {% render "image-lazy", image: image, class: "s-benefits__main-image" %}
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>

    {% if section.settings.link_text != blank and section.settings.link_url != blank %}
      <a class="s-benefits__link" href="{{ section.settings.link_url }}">
        {{ section.settings.link_text }}
        {% render "icons", icon: "chewron-right" %}
      </a>
    {% endif %}
  </div>
</s-benefits>

